<!DOCTYPE html>

<!--
	This file is rendered by express.js, when the home url of the chat is opened in a browser.
	It doesn't do much, except showing the create button for the chat.
 -->

<html>

<head>

	<title>Chatube</title>
	<script src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
	<link type="text/css" rel="stylesheet" href="css/stylesheet.css" />
	<link href="https://fonts.googleapis.com/css?family=Open+Sans Condensed:300italic,300,700" rel="stylesheet" type="text/css">


</head>

<body>
	<header class="homebanner">

			<h1 class="homebannertext">
				<img src="img/chatsmalllogo.png" alt="chatlogo" id="chatsmalllogo" />
				<a href="" id="logo">ChatTube</a>
			</h1>

	</header>

	<section>

		<div class="homesection">
			<div class="infoConnected">
				<div class="signin-form profile">
				<div class="login-form">
					<form action="/login" method="post">
						<label class="loginRegisterFormLabel">
						    <input type="text"  name="logemail" required="">
							<div class="label-text">Email</div>
						</label>
						<label class="loginRegisterFormLabel">
						    <input type="password"  name="logpassword"  required="">
						    <div class="label-text">Password</div>
						</label>
						<div class="tp">
						<input type="submit" class="loginRegisterButton" value="Login">
						</div>
					</form>
					<br/>
					<br/>
					<div><a class="loginRegisterlink" href="/register"> Register</a></div>
				</div>
			</div>
		</div>
	</section>

</body>
</html>
